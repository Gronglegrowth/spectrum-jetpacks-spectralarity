{
  "schemaVersion": 1,
  "id": "spectrumadditions",
  "version": "${version}",

  "name": "Spectrum Additions",
  "description": "An addon for the Spectrum mod that adds lots of utilities and features that wouldn't fit in the main mod.",
  "authors": [
    "Mayaqq"
  ],
  "contact": {
    "homepage": "https://mayaqq.dev",
    "sources": "https://github.com/MayaqqDev/Spectrum-Additions"
  },

  "license": "LGPL-3",
  "icon": "assets/spectrumadditions/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "dev.mayaqq.spectrumadditions.SpectrumAdditions"
    ],
    "client": [
      "dev.mayaqq.spectrumadditions.SpectrumAdditionsClient"
    ],
    "modmenu": [
      "dev.mayaqq.spectrumadditions.integrations.ModMenuIntegration"
    ]
  },
  "mixins": [
    "spectrumadditions.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.10",
    "fabric-api": "*",
    "minecraft": "~1.19.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
